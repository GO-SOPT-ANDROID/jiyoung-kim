<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GOSOPTAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_100</item>
        <item name="colorSecondaryVariant">@color/white_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Font Theme -->
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.SOPT.HeadLineMedium</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.SOPT.HeadLineLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.SOPT.BodyMedium</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.SOPT.CaptionMedium</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.SOPT.CaptionLarge</item>

    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/shape_white_radius_10</item>
    </style>

    <style name="TextInputEditTextStyle" parent="ThemeOverlay.Material3.MaterialTimePicker.Display.TextInputEditText">
        <item name="android:background">@drawable/shape_textinput_edittext_background</item>
    </style>

    <style name="TextInputEditErrorStyle" parent="ThemeOverlay.Material3.MaterialTimePicker.Display.TextInputEditText">
        <item name="android:background">@drawable/shape_red_radius_10</item>
    </style>

</resources>