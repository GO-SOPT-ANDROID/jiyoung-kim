<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="40dp"
    android:layout_marginHorizontal="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_member"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_item_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        tools:text="first name"
        android:textAppearance="?textAppearanceHeadlineMedium"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_member"
        app:layout_constraintStart_toStartOf="@+id/iv_item_member"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_member" />

    <TextView
        android:id="@+id/tv_item_member_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="email"
        android:textAppearance="?textAppearanceLabelMedium"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_item_member_name"
        app:layout_constraintStart_toStartOf="@+id/tv_item_member_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_member_name" />
</androidx.constraintlayout.widget.ConstraintLayout>